<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- property name="hibernate.hbm2ddl.auto">update</property> -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/university</property>
        <property name="hibernate.connection.username">tester</property>
        <property name="hibernate.connection.password">test</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
       
 
        <!-- Print executed SQL to stdout -->
        <property name="show_sql">true</property>
 
        <!-- Drop and re-create all database on startup -->
        <!--property name="hibernate.hbm2ddl.auto">create-drop</property-->
 
        <!-- Annotated entity classes -->      
        

        <mapping class="com.rumakin.universityschedule.models.Auditorium" />
        <mapping class="com.rumakin.universityschedule.models.Building" />
        <mapping class="com.rumakin.universityschedule.models.Faculty" />
        <mapping class="com.rumakin.universityschedule.models.Group" />
        <mapping class="com.rumakin.universityschedule.models.Lesson" />
        <mapping class="com.rumakin.universityschedule.models.Person" />
        <mapping class="com.rumakin.universityschedule.models.Student" />
        <mapping class="com.rumakin.universityschedule.models.Subject" />
        <mapping class="com.rumakin.universityschedule.models.Teacher" />
    </session-factory>

</hibernate-configuration>